<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/cast_expanded_controller_ad_label_background_color" />

    <TextView
        android:id="@+id/item_username"
        android:layout_width="80dp"
        android:layout_height="23dp"
        android:layout_marginTop="8dp"
        android:text="username"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView"
        android:layout_marginLeft="8dp" />

    <TextView
        android:id="@+id/item_coordinates"
        android:layout_width="0dp"
        android:layout_height="17dp"
        android:text="coords"
        android:layout_marginTop="3dp"
        app:layout_constraintTop_toBottomOf="@+id/item_email"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/item_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="time"
        app:layout_constraintLeft_toRightOf="@+id/item_coordinates"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/item_email" />

    <TextView
        android:id="@+id/item_email"
        android:layout_width="0dp"
        android:layout_height="17dp"
        android:text="mail"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/item_username"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/imageView" />
</android.support.constraint.ConstraintLayout>